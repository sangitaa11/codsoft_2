<div class="wrapper bg-white">
  <form action="/book-flight" method="post" class="needs-validation" novalidate>
    <div class="form-group border-bottom d-flex align-items-center justify-content-between flex-wrap">
      <label class="option my-sm-0 my-2">
        <input type="radio" name="radio" checked>Round Trip
        <span class="checkmark"></span>
      </label>
      <label class="option my-sm-0 my-2">
        <input type="radio" name="radio">One Way
        <span class="checkmark"></span>
      </label>
      <div class="d-flex align-items-center my-sm-0 my-2">
        <a href="#" class="text-decoration-none">
          Multi-city/Stopovers <span class="fas fa-angle-right ps-2 text-primary"></span>
        </a>
      </div>
    </div>
    <div class="form-group d-sm-flex margin">
      <div class="d-flex align-items-center flex-fill me-sm-1 my-sm-0 my-4 border-bottom position-relative">
        <input type="text" id="from" name="from" required placeholder="From" class="form-control">
        <span class="fas fa-dot-circle text-muted"></span>
        <div class="invalid-feedback">Please select a departure location.</div>
      </div>
      <div class="d-flex align-items-center flex-fill ms-sm-1 my-sm-0 my-4 border-bottom position-relative">
        <input type="text" id="to" name="to" required placeholder="To" class="form-control">
        <span class="fas fa-map-marker text-muted"></span>
        <div class="invalid-feedback">Please select an arrival location.</div>
      </div>
    </div>
    <div class="form-group d-sm-flex margin">
      <div class="d-flex align-items-center flex-fill me-sm-1 my-sm-0 border-bottom position-relative">
        <input type="date" id="departure" name="departure" required placeholder="Depart Date" class="form-control">
      </div>
      <div class="d-flex align-items-center flex-fill ms-sm-1 my-sm-0 my-4 border-bottom position-relative">
        <input type="date" id="arrive" name="arrive" required placeholder="Return Date" class="form-control">
      </div>
    </div>
    <div class="form-group border-bottom d-flex align-items-center position-relative">
      <div class="input-group">
        <input type="number" id="adults" name="adults" required placeholder="Adults" class="form-control" min="1">
        <div class="input-group-append">
          <span class="input-group-text"><i class="fas fa-users text-muted"></i></span>
        </div>
      </div>
    </div>
    <div class="form-group border-bottom d-flex align-items-center position-relative">
      <div class="input-group">
        <input type="number" id="children" name="children" required placeholder="Children" class="form-control" min="0">
        <div class="input-group-append">
          <span class="input-group-text"><i class="fas fa-users text-muted"></i></span>
        </div>
      </div>
    </div>
    <div class="form-group border-bottom d-flex align-items-center">
      <div class="d-flex align-items-center">
        <select id="cabin-class" name="cabin-class" class="form-control my-0" required>
          <option value="" disabled selected>Select Cabin Class</option>
          <option value="economy">Economy</option>
          <option value="business">Business</option>
          <option value="first-class">First Class</option>
        </select>
        <span class="fas fa-chevron-down text-muted ms-2"></span>
      </div>
    </div>
    <div class="form-group my-3">
      <button class="btn btn-primary w-100 rounded-0 d-flex justify-content-center text-center p-3" type="submit">Book Flight</button>
    </div>
  </form>
</div>
<script src="form-validation.js"></script>
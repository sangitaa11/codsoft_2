<body style="background-color: #FCFFE7;">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card my-5">
        <div class="card-body p-4">
          <h5 class="card-title text-center mb-4">Car Search</h5>
          <form action="/search/car" method="post">
            <div class="mb-3">
              <label for="pickup-location" class="form-label">Pickup Location</label>
              <input type="text" class="form-control" id="pickup-location" name="pickup-location" required>
            </div>
            <div class="mb-3">
              <label for="car-type" class="form-label">Car Type</label>
              <select id="car-type" name="car-type" class="form-select">
                <option value="compact">Compact</option>
                <option value="midsize">Midsize</option>
                <option value="suv">SUV</option>
                <option value="luxury">Luxury</option>
              </select>
            </div>
            <div class="text-center">
              <button class="btn btn-primary" type="submit">Search Cars</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
</body>

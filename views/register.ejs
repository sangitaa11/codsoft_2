
<%- include('partials/header', { title: 'Register' }) %>
<link rel="stylesheet" href="/css/style.css">
<section class="vh-100" style="background-color: #FCFFE7;">
  <div class="container h-100">
    <div class="row h-100 justify-content-center align-items-center">
      <div class="col-md-8 col-lg-6">
        <div class="card" style="border-radius: 1rem;">
          <div class="card-body p-4 p-lg-5 text-black">
            <form id="registration-form" action="/register" method="post">
              <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Create your account</h5>

              <!-- Step 1: Name, Age, Gender, Phone -->
              <div class="step step-1">
                <div class="mb-3">
                  <label for="username" class="form-label">Username</label>
                  <input type="text" class="form-control" name="username" id="username" placeholder="Username" required>
                </div>

                <div class="mb-3">
                  <label for="gender" class="form-label">Gender</label>
                  <input type="text" class="form-control" name="gender" id="gender" placeholder="Gender" required>
                </div>

                <div class="mb-3">
                  <label for="phone" class="form-label">Phone Number</label>
                  <input type="text" class="form-control" name="phone" id="phone" placeholder="Phone Number" required>
                </div>

                <div class="mb-3">
                  <label for="age" class="form-label">Age</label>
                  <input type="text" class="form-control" name="age" id="age" placeholder="Age" required>
                </div>

                <button class="btn btn-primary btn-lg next-button" type="button">Next</button>
              </div>

              <!-- Step 2: Email, Password, Confirm Password -->
              <div class="step step-2">
                <div class="mb-3">
                  <label for="email" class="form-label">Email ID</label>
                  <input type="email" class="form-control" name="email" id="email" placeholder="Email ID" required>
                </div>

                <div class="mb-3">
                  <label for="password" class="form-label">Password</label>
                  <input type="password" class="form-control" name="password" id="password" placeholder="Password" required>
                </div>

                <div class="mb-4">
                  <label for="confirmPassword" class="form-label">Confirm Password</label>
                  <input type="password" class="form-control" name="confirmPassword" id="confirmPassword" placeholder="Confirm Password" required>
                </div>

                <div class="d-grid">
                  <button class="btn btn-primary btn-lg prev-button" type="button">Previous</button>
                  <button class="btn btn-dark btn-lg" type="submit">Register</button>
                </div>
              </div>
            </form>

            <p class="mt-3 text-center" style="color: #393f81;">Already have an account? <a href="/login" style="color: #393f81;">Sign in here</a></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<%- include('partials/footer') %>
<script src="register.js"></script>